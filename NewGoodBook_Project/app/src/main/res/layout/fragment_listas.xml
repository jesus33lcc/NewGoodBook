<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1BE6A6"
    android:backgroundTint="#F6F0F0"
    tools:context=".Listas" >

    <Button
        android:id="@+id/btn_Listas"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:backgroundTint="#112B52"
        android:text="Listas"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/icon_newgoodbook_background"
        android:textColorHighlight="#E30303"
        android:textColorLink="#B51919"
        android:textCursorDrawable="@color/brown"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_listas"
        app:iconTint="@color/icon_newgoodbook_background"
        app:layout_constraintBottom_toTopOf="@+id/btn_Borrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/black"
        app:strokeColor="#C52929" />

    <Button
        android:id="@+id/btn_Borrar"
        style="@style/Widget.Material3.Button"
        android:layout_width="203dp"
        android:layout_height="54dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#573600"
        android:drawableBottom="@android:drawable/ic_menu_delete"
        android:text="Borrar"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Toolbar_Populares"
        app:layout_constraintEnd_toStartOf="@+id/btn_Anadir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Anadir"
        style="@style/Widget.Material3.Button"
        android:layout_width="204dp"
        android:layout_height="55dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#573600"
        android:drawableBottom="@android:drawable/ic_menu_zoom"
        android:text="Añadir"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Toolbar_Populares"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_Borrar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_LibrosLeidos"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#112B52"
        android:drawableLeft="@android:drawable/checkbox_on_background"
        android:fontFamily="sans-serif"
        android:text="Libros Leídos"
        android:textSize="16sp"
        android:typeface="normal"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Mg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Toolbar_Populares" />

    <Button
        android:id="@+id/btn_Mg"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="#112B52"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="Me Gusta"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_TodosLibros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_LibrosLeidos" />

    <Button
        android:id="@+id/btn_TodosLibros"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="#112B52"
        android:drawableLeft="@android:drawable/ic_dialog_dialer"
        android:text="Todos los Libros"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar_Personalizadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Mg" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/Toolbar_Populares"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#A68D5D"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Borrar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="25dp"
        android:text="Libros más populares"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Toolbar_Populares"
        app:layout_constraintEnd_toEndOf="@+id/Toolbar_Populares"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Toolbar_Populares"
        app:layout_constraintVertical_bias="0.461" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_Personalizadas"
        android:layout_width="404dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#A68D5D"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/btn_ListaPersonalizada1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_TodosLibros" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="221dp"
        android:layout_height="26dp"
        android:text="Listas personalizadas"
        android:textColor="#050505"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_Personalizadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="@+id/toolbar_Personalizadas"
        app:layout_constraintTop_toBottomOf="@+id/btn_TodosLibros" />

    <Button
        android:id="@+id/btn_ListaPersonalizada2"
        style="@style/Widget.Material3.Button"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#112B52"
        android:text="Mi Lista2"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ListaPersonalizada3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ListaPersonalizada1" />

    <Button
        android:id="@+id/btn_ListaPersonalizada3"
        style="@style/Widget.Material3.Button"
        android:layout_width="412dp"
        android:layout_height="79dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#112B52"
        android:text="Mi Lista3"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

   
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <Button
        android:id="@+id/btn_ListaPersonalizada1"
        android:layout_width="404dp"
        android:layout_height="69dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#112B52"
        android:text="Mi Lista"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_Personalizadas"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>